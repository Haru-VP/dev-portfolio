---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import { ViewTransitions } from 'astro:transitions';

const { title = "Valen Pinto | Portfolio" } = Astro.props;
---

<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="icon" href="/favicon.svg" />
    <ViewTransitions />

    <!-- Prevent FOUC (Flash of Unstyled Content) for dark mode -->
    <script is:inline>
      (function () {
        const theme = localStorage.getItem('theme');
        if (
          theme === 'dark' ||
          (!theme && window.matchMedia('(prefers-color-scheme: dark)').matches)
        ) {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>
  </head>

  <body class="bg-background text-foreground font-body transition-colors duration-300">
    <Navbar />

    <main>
      <slot />
    </main>

    <Footer />
    <script type="module" src="/src/scripts/ui.js"></script>

  </body>
</html>
