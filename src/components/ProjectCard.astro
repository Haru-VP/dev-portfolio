---
const { title, description, image, href } = Astro.props
---

<a
  href={href}
  class="group relative overflow-hidden rounded-3xl bg-white/60 backdrop-blur border border-pink-200/40 shadow-sm hover:shadow-xl transition"
>
  <div class="aspect-[4/3] overflow-hidden">
    <img
      src={image}
      alt={title}
      class="h-full w-full object-cover group-hover:scale-105 transition duration-700"
    />
  </div>

  <div class="p-6">
    <h3 class="font-serif text-2xl mb-2 text-gray-800">
      {title}
    </h3>
    <p class="text-sm text-gray-600 leading-relaxed">
      {description}
    </p>
  </div>
</a>
