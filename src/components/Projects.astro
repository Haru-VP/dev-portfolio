---
import { translations } from "../i18n/translations";
const { lang = "es" } = Astro.props;
const t = translations[lang];
---

<section class="py-28 px-6 bg-muted/30">
  <div class="max-w-6xl mx-auto">

    <div class="text-center mb-20">
      <h2 class="font-serif text-5xl font-bold mb-4">
        {t.projectsTitle}
      </h2>
      <p class="text-muted-foreground text-xl">
        {t.projectsSubtitle}
      </p>
    </div>

    <div class="grid gap-10 md:grid-cols-2">
      <div class="p-8 rounded-3xl border border-white/10 hover:shadow-lg transition">
        <h3 class="text-2xl font-semibold mb-3">
          {t.projectOneTitle}
        </h3>
        <p class="text-muted-foreground mb-6">
          {t.projectOneDesc}
        </p>
        <span class="text-sm text-pastel-pink">
          {t.projectTech}
        </span>
      </div>

      <div class="p-8 rounded-3xl border border-white/10 hover:shadow-lg transition">
        <h3 class="text-2xl font-semibold mb-3">
          {t.projectTwoTitle}
        </h3>
        <p class="text-muted-foreground mb-6">
          {t.projectTwoDesc}
        </p>
        <span class="text-sm text-pastel-mint">
          {t.projectTech}
        </span>
      </div>
    </div>
  </div>
</section>
