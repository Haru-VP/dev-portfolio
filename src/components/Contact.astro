---
import { translations } from "../i18n/translations";
const { lang = "es" } = Astro.props;
const t = translations[lang];
---

<section class="py-28 px-6">
  <div class="max-w-3xl mx-auto text-center">

    <h2 class="font-serif text-5xl font-bold mb-6">
      {t.contactTitle}
    </h2>

    <p class="text-xl text-muted-foreground mb-12">
      {t.contactSubtitle}
    </p>

    <a
      href="mailto:hello@valentinapinto.dev"
      class="inline-block px-8 py-4 rounded-full bg-pink-400 text-white text-lg hover:scale-105 transition"
    >
      {t.contactCTA}
    </a>
  </div>
</section>
