---
import MobileMenu from './MobileMenu.astro';
---

<header
  class="sticky top-0 z-50 w-full backdrop-blur-xl
         bg-pink-50/70 dark:bg-[#1f1a2e]/70
         border-b border-pink-200/40 dark:border-white/10"
>
  <div class="mx-auto max-w-6xl px-6 py-4 flex items-center justify-between">

    <!-- Logo -->
    <a href="/" class="flex items-center gap-3">
      <div
        class="h-9 w-9 rounded-full bg-gradient-to-br from-pastel-pink to-pastel-lavender
               flex items-center justify-center text-white font-semibold shadow-md"
      >
        V
      </div>

      <span
        class="font-serif italic text-xl text-gray-800 dark:text-pink-100"
      >
        Valen Pinto
      </span>
    </a>

    <!-- Links - Desktop only (hidden on mobile) -->
    <nav class="hidden md:flex items-center gap-10 text-sm font-medium
                text-gray-700 dark:text-gray-200">

      <a data-i18n="navHome" href="/" class="hover:text-pastel-pink transition">
        Inicio
      </a>

      <a data-i18n="navProjects" href="/projects" class="hover:text-pastel-pink transition">
        Proyectos
      </a>

      <a data-i18n="navAbout" href="/about" class="hover:text-pastel-pink transition">
        Sobre mÃ­
      </a>

      <a
        data-i18n="navContact"
        href="/contact"
        class="rounded-full px-5 py-2
               bg-gradient-to-r from-pastel-pink to-pastel-lavender
               text-white shadow hover:scale-105 transition"
      >
        Contacto
      </a>

      <!-- Controls -->
      <div class="flex items-center gap-3 pl-4 border-l border-pink-200/40 dark:border-white/10">

        <!-- Dark mode -->
        <button
          id="theme-toggle"
          aria-label="Toggle dark mode"
          class="text-xl hover:scale-110 transition"
        >
          ðŸŒ™
        </button>

        <!-- Language -->
        <button data-lang="es" class="text-xs opacity-70 hover:opacity-100">ES</button>
        <button data-lang="en" class="text-xs opacity-70 hover:opacity-100">EN</button>
      </div>
    </nav>

    <!-- Hamburger button - Mobile only (visible on mobile < md) -->
    <button
      id="mobile-menu-toggle"
      aria-label="Open menu"
      class="md:hidden flex items-center justify-center w-11 h-11 
             text-gray-700 dark:text-gray-200 hover:text-pastel-pink 
             dark:hover:text-pastel-pink transition"
    >
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="3" y1="12" x2="21" y2="12"></line>
        <line x1="3" y1="6" x2="21" y2="6"></line>
        <line x1="3" y1="18" x2="21" y2="18"></line>
      </svg>
    </button>
  </div>
</header>

<!-- Mobile Menu Component -->
<MobileMenu />
